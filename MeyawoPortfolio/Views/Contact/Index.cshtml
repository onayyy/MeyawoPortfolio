@model List<MeyawoPortfolio.Models.TblContact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Gelen Mesajlar Sayfası</h2>

<table class="table table-bordered">
    <tr>
        <th>Mesaj Id</th>
        <th>Gönderenin Adı</th>
        <th>Email</th>
        <th>Tarih</th>
        <th>IsRead</th>
        <th>Mesajı Aç</th>
        <th>Mesajı Sil</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.ContactID</td>
            <td>@item.NameSurname</td>
            <td>@item.Email</td>
            <td>@item.SendDate</td>
            <td>@item.IsRead</td>
            <td><a href="/Contact/OpenMessage/@item.ContactID" class="btn btn-warning">Mesajı Aç</a></td>
            <td><a href="/Contact/DeleteMessage/@item.ContactID" class="btn btn-danger">Mesajı Sil</a></td>
        </tr>
    }
</table>
